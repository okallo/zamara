@{
    ViewData["Title"] = "Staff Page";
}

@model List<Zamara.Models.Staff>
<div class="row">
    <div class="col-md-12">
        <a asp-action="CreateStaff" asp-controller="Staff" class="btn btn-success">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
@if(Model.Count > 0){
    <table id="stafftable" class="table table-striped" style="width:100%">
            <thead>
                <tr>
                    <td>Staff Number</td>
                    <td>Staff Name</td>
                    <td>Staff Photo</td>
                    <td>Staff Email</td>
                    <td>Department</td>
                    <td>Salary</td>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.StaffNumber</td>
                    <td>@item.Name</td>
                    <td>@item.Photo</td>
                    <td>@item.Email</td>
                    <td>@item.Department</td>
                    <td>@item.Salary</td>
                    <td>
                        <a asp-action="EditStaff" asp-controller="Staff" asp-route-id="@item.Id">
                            Edit
                        </a>
                        <a asp-action="DeleteStaff" asp-controller="Staff" asp-route-id="@item.Id">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>}
        else{
                <h1 class="text-center">Add Staff</h1>
            }
        
    </div>
</div>
<script>
    (document).ready(function() {
    var table = $('#stafftable').DataTable( {
        lengthChange: false,
        buttons: [ 'copy', 'excel', 'pdf', 'colvis' ]
    } );
 
    table.buttons().container()
        .appendTo( '#example_wrapper .col-md-6:eq(0)' );
} );
</script>
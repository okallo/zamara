                        <label asp-for="StaffNumber"></label>
                        <span asp-validation-for="StaffNumber" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-floating">
                        <input asp-for="Salary" class="form-control" autocomplete="salary" aria-required="true" />
                        <label asp-for="Salary"></label>
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-floating">
                        <input asp-for="PhotoFile" class="form-control" autocomplete="photo" aria-required="true"
                            type="file" />
                        <label asp-for="PhotoFile"></label>
                        <span asp-validation-for="PhotoFile" class="text-danger"></span>
                    </div>
                    <br>
                </div>
                <div class="col-md-6">
                    <br>
                    <div class="form-floating">
                        <input asp-for="Policy" class="form-control" autocomplete="policy" aria-required="true" />
                        <label asp-for="Policy"></label>
                        <span asp-validation-for="Policy" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-floating">
                        <input asp-for="Claims" class="form-control" autocomplete="policy comma separated" aria-required="true" />
                        <label asp-for="Claims"></label>
                        <span asp-validation-for="Claims" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" autocomplete="new-password"
                            aria-required="true" />
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password"
                            aria-required="true" />
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <br>
                    <br>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    <br>
                </div>
            </div>
        </form>
    </div>
